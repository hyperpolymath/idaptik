# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# ReScript files
[*.res]
indent_style = space
indent_size = 2

# ReScript interface files
[*.resi]
indent_style = space
indent_size = 2

# JavaScript (generated by ReScript)
[*.{js,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# Justfile
[justfile]
indent_style = space
indent_size = 4

# Markdown files
[*.{md,adoc}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Make files
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_style = space
indent_size = 2
